{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "编译当前为 test.exe",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/output/test.exe"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "把当前打开的 cpp 文件编译成 output/test.exe"
        }
    ]
}
